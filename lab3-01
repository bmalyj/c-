#include <iostream>
#include <string>
using namespace std;

class Student {
private:
    string name;
    int age;
    double average;
    int grades[5];

public:
    // конструктор с параметрами
    Student(string n, int a) {
        name = n;
        age = a;
        average = 0;

    }
    void setGrade(int index, int value) {
        if (index >= 0 && index < 5) {
            if (value >= 1 && value <= 5) {
                grades[index] = value;
            }
            else {
                cout << "Ошибка: оценка должна быть от 1 до 5" << endl;
            }
        }
        else {
            cout << "Ошибка: индекс должен быть от 0 до 4" << endl;
        }
    }
    // геттер возраста
    int getAge() {
        return age;
    }
    // сеттер возраста
    void setAge(int a) {
        age = a;
    }
    // расчет среднего
    void calcAverage() {
        int sum = 0;
        for (int i = 0; i < 5; i++) {
            sum += grades[i];
        }
        average = (double)sum / 5;
    }
    // вывод инфы
    void displayInfo() {
        calcAverage();
        cout << "Имя: " << name << endl;
        cout << "Возраст:  " << age << endl;
        cout << "Средний балл: " << average << endl;
        cout << "Оценки: ";
        for (int i = 0; i < 5; i++) {
            cout << grades[i] << " ";
        }
        cout << endl;
    }

    bool hasScholarship() {
        calcAverage();
        return average >= 4.5;
    }
};

int main() {
    setlocale(LC_ALL, "Russian");
    Student student("Иван Иванов", 20);

    student.setGrade(0, 5);
    student.setGrade(1, 4);
    student.setGrade(2, 5);
    student.setGrade(3, 3);
    student.setGrade(4, 4);

    student.displayInfo();

    if (student.hasScholarship()) {
        cout << "Студент получает стипендию" << endl;
    }
    else {
        cout << "Стипендия не назначена" << endl;
    }

    return 0;
}
